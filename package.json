{
  "name": "image-converter",
  "version": "1.0.0",
  "description": "Windows Image Converter - Batch convert and resize images",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --win"
  },
  "keywords": ["image", "converter", "resize", "jpg"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "sharp": "^0.33.1",
    "heic-convert": "^2.1.0"
  },
  "build": {
    "appId": "com.yourcompany.imageconverter",
    "productName": "Image Converter",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["ia32"]
        }
      ],
      "verifyUpdateCodeSignature": false,
      "signingHashAlgorithms": ["sha256"],
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true
    }
  }
}